{
  "name": "cyCombine",
  "description": "Performs batch correction of flow cytometry data.",
  "tags": [
    "flow cytometry",
    "preprocessing",
    "normalisation"
  ],
  "authors": [
    "tercen"
  ],
  "urls": [
    "https://github.com/tercen/cycombine_operator"
  ],
  "properties": [
    {
      "kind": "DoubleProperty",
      "name": "seed",
      "defaultValue": -1,
      "description": "Seed for random number generation."
    },
    {
      "kind": "EnumeratedProperty",
      "name": "norm_method",
      "defaultValue": "scale",
      "values": [
        "scale",
        "rank",
        "qnorm"
      ],
      "description": "Standardisation method used within each batch (default: scale)."
    }
  ],
  "operatorSpec": {
    "kind": "OperatorSpec",
    "ontologyUri": "https://tercen.com/_ontology/tercen",
    "ontologyVersion": "0.0.1",
    "inputSpecs": [
      {
        "kind": "CrosstabSpec",
        "metaFactors": [
          {
            "kind": "MetaFactor",
            "name": "Variables",
            "type": "",
            "description": "Represents the variables (e.g. channels, markers)",
            "ontologyMapping": "variable",
            "crosstabMapping": "row",
            "cardinality": "1..n",
            "factors": []
          },
          {
            "kind": "MetaFactor",
            "name": "Observations",
            "type": "",
            "description": "Observations (rowID)",
            "ontologyMapping": "observation",
            "crosstabMapping": "column",
            "cardinality": "1..n",
            "factors": []
          },
          {
            "kind": "MetaFactor",
            "name": "Condition",
            "type": "",
            "description": "Condition (optional)",
            "ontologyMapping": "condition",
            "crosstabMapping": "color",
            "cardinality": "0..1",
            "factors": []
          },
          {
            "kind": "MetaFactor",
            "name": "Batch",
            "type": "",
            "description": "Batch identifier",
            "ontologyMapping": "batch",
            "crosstabMapping": "label",
            "cardinality": "1",
            "factors": []
          }
        ],
        "axis": [
          {
            "kind": "AxisSpec",
            "metaFactors": [
              {
                "kind": "MetaFactor",
                "name": "Measurement",
                "type": "numeric",
                "description": "The value of measurement signal of the channel/marker",
                "ontologyMapping": "measurement",
                "crosstabMapping": "y",
                "cardinality": "1",
                "factors": []
              }
            ]
          }
        ]
      }
    ]
  }
}